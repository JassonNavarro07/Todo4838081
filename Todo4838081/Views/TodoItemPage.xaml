<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo4838081.Views.TodoItemPage"
             Title="TodoItemPage">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                         Spacing="10"
                         VerticalOptions="StartAndExpand">

            <Label Text="Name"/>
            <Entry Text="{Binding Name}"/>
            <Label Text="Notes"/>
            <Entry Text="{Binding Notes}"/>
            <Label Text="Done"/>
            <Switch IsToggled="{Binding Done}"/>
            <Button Text="Save"
                Clicked="OnSaveCliecked"/>
            <Button Text="Delete"
                    Clicked="OnDeleteCliecked"/>
            <Button Text="Cancel"
                    Clicked="OnCancelCliecked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>